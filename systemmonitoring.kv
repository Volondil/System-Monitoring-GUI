<MainFrame>
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: root.width, root.height
    canvas:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        Rectangle:
            pos: (root.width / 3), 0
            size: ((root.width / 3) * 2), root.height
    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width: 1.
            points: ((root.width / 3), 0, (root.width / 3), root.height)