#: import SwapTransition kivy.uix.screenmanager.SwapTransition

<MainWindow>:
    name: 'MainWindow'
    id: main_window
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: root.width, root.height
        canvas:
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            Rectangle:
                pos: (root.width / 3), 0
                size: ((root.width / 3) * 2), root.height
        canvas.after:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 1.5
                points: ((root.width / 3), 0, (root.width / 3), root.height)
        FloatLayout:
            ScreenManager:
                id: sm
                size_hint_y: 1
                MonitoringScreen:
                OptionsScreen:
                AboutScreen:
        Button:
            id: btn_resources
            text: 'Moniteur Ressources'
            font_size: 20
            background_color: 0, 0.55, 0.85, 1
            size_hint: 1/3, 1/10
            pos_hint: {'x': 0, 'y': 1 - 1/10}
            on_press:
                sm.transition = SwapTransition()
                sm.current = 'monitoring_screen'
        Button:
            id: btn_options
            text: 'Options'
            font_size: 20
            background_color: 0.45, 0.45, 0.45, 1
            size_hint: 1/3, 1/10
            pos_hint: {'x': 0, 'y': 1 - 2/10}
            on_press:
                sm.transition = SwapTransition()
                sm.current = 'options_screen'
        Button:
            id: btn_about
            text: "A Propos"
            font_size: 20
            background_color: 0.45, 0.45, 0.45, 1
            size_hint: 1/3, 1/10
            pos_hint: {'x': 0, 'y': 1 - 3/10}
            on_press:
                sm.transition = SwapTransition()
                sm.current = 'about_screen'

