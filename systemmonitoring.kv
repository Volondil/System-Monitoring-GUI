#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<MainWindow>:
    name: 'MainWindow'
    id: main_window
    FloatLayout:
        canvas.after:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 1.5
                points: (250, 0, 250, root.height)
        FloatLayout:
            canvas:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: (252), 0
                    size: ((root.width - 250) * 2), root.height
            ScreenManager:
                id: sm
                size_hint_y: 1
                MonitoringScreen:
                OptionsScreen:
                AboutScreen:
        FloatLayout:
            canvas:
                Color:
                    rgba: 0.15, 0.15, 0.15, 1
                Rectangle:
                    pos: self.x, self.y
                    size: 250, root.height
            Button:
                id: btn_resources
                text: 'Moniteur Ressources'
                font_size: 20
                background_color: 0, 0.55, 0.85, 1
                size: 250, 50
                size_hint: None, None
                pos: 0, root.height - 50
                on_press:
                    sm.transition = SlideTransition()
                    sm.current = 'monitoring_screen'
            Button:
                id: btn_options
                text: 'Options'
                font_size: 20
                background_color: 0.45, 0.45, 0.45, 1
                size: 250, 50
                size_hint: None, None
                pos: 0, root.height - 100
                on_press:
                    sm.transition = SlideTransition()
                    sm.current = 'options_screen'
            Button:
                id: btn_about
                text: "A Propos"
                font_size: 20
                background_color: 0.45, 0.45, 0.45, 1
                size: 250, 50
                size_hint: None, None
                pos: 0, root.height - 150
                on_press:
                    sm.transition = SlideTransition()
                    sm.current = 'about_screen'

<MonitoringScreen>:
